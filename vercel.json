{
  "version": 2,
  "builds": [
    {
      "src": "functions/_worker.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "dist/**",
          "functions/**",
          "database/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "functions/_worker.ts"
    },
    {
      "src": "/(.*)",
      "dest": "dist/$1"
    }
  ],
  "env": {
    "DATABASE_URL": "@database_url",
    "JWT_SECRET": "@jwt_secret",
    "PAYMENT_SECRET": "@payment_secret"
  }
}