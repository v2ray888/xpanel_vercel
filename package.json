{
  "name": "cloudflare-xpanel",
  "version": "1.0.0",
  "description": "VPN销售管理系统",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "wrangler dev functions/_worker.ts --env production",
    "build": "tsc --project functions/tsconfig.json && vite build",
    "preview": "vite preview",
    "deploy": "wrangler pages deploy dist",
    "deploy:api": "echo \"For Cloudflare Pages, Functions are deployed with the site\"",
    "deploy:all": "npm run build && npm run deploy",
    "deploy:vercel": "node scripts/deploy-vercel.js",
    "db:generate": "wrangler d1 execute xpanel-db-new --env production --file=./database/schema.sql --remote",
    "db:seed": "wrangler d1 execute xpanel-db-new --env production --file=./database/seed.sql --remote",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.3.2",
    "@tanstack/react-query": "^5.8.4",
    "@types/bcryptjs": "^2.4.6",
    "@types/js-cookie": "^3.0.6",
    "@types/qrcode": "^1.5.5",
    "axios": "^1.13.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.4.1",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "hono": "^4.10.3",
    "js-cookie": "^3.0.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.1",
    "recharts": "^2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.0.0",
    "toml": "^3.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250927.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "wrangler": "^4.40.2"
  }
}
